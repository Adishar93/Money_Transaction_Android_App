<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>


    <style name="LoginEditTextStyle" >
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>

        <item name="android:font">@font/roboto_regular</item>

    </style>

    <style name="ButtonStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:font">@font/roboto_regular</item>
        <item name="android:textColor">@color/PlainWhite</item>
        <item name="android:background">@drawable/buttoncustomshapecolor</item>

    </style>

    <style name="CardViewCustomStyle" parent="CardView">

        <item name="cardCornerRadius">13dp</item>
        <item name="cardElevation">10dp</item>
        <item name="contentPadding">27dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="LinkStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:font">@font/roboto_regular</item>
        <item name="android:textColor">@color/LinkBlue</item>


    </style>

    <style name="DescriptionBoxOld">
        <item name="android:background">@drawable/description_textinput_border</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">top|left</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">textCapSentences|textNoSuggestions|textMultiLine</item>
        <item name="android:scrollHorizontally">false</item>

    </style>




</resources>